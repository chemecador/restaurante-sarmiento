---
const horarios = [
  { dias: 'Martes – Viernes', horas: '9:00 – 18:00' },
  { dias: 'Sábado – Domingo', horas: '10:00 – 18:00' },
  { dias: 'Lunes',            horas: 'Descanso semanal' },
];
---

<section id="contacto" class="py-24 bg-sarmiento-brown text-sarmiento-cream">
  <div class="max-w-6xl mx-auto px-6">

    <!-- Cabecera -->
    <div class="text-center mb-16">
      <span class="text-sarmiento-amber text-sm tracking-[0.4em] uppercase font-sans">Encuéntranos</span>
      <h2 class="font-serif text-4xl md:text-5xl text-sarmiento-cream mt-3">Contacto</h2>
      <div class="flex items-center justify-center gap-4 mt-6">
        <div class="h-px w-12 bg-sarmiento-amber"></div>
        <div class="w-2 h-2 rounded-full bg-sarmiento-amber"></div>
        <div class="h-px w-12 bg-sarmiento-amber"></div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 items-start">

      <!-- Información de contacto -->
      <div class="space-y-12">
        <!-- Dirección -->
        <div>
          <h3 class="font-serif text-sarmiento-amber text-xl mb-4">Dónde estamos</h3>
          <address class="not-italic font-sans text-sarmiento-cream/80 leading-relaxed space-y-1">
            <p>Av. de Pablo Gargallo, 41</p>
            <p>50003 – Zaragoza</p>
          
          </address>
        </div>

        <!-- Horarios -->
        <div>
          <h3 class="font-serif text-sarmiento-amber text-xl mb-4">Horarios</h3>
          <ul class="font-sans text-sarmiento-cream/80 space-y-3">
            {horarios.map(({ dias, horas }) => (
              <li class="flex flex-col">
                <span class="text-sarmiento-cream font-semibold text-sm">{dias}</span>
                <span class="text-sm">{horas}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Reservas -->
        <div>
          <h3 class="font-serif text-sarmiento-amber text-xl mb-4">Reservas</h3>
          <p class="font-sans text-sarmiento-cream/80 text-sm leading-relaxed">
            La reserva se realiza exclusivamente por teléfono.
          </p>
          <p class="pt-3">
              <a href="tel:+34639580211" class="hover:text-sarmiento-amber transition-colors flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                639 580 211
              </a>
            </p>
        </div>
      </div>

      <!-- Mapa -->
      <div class="lg:col-span-2 w-full h-[450px] bg-sarmiento-dark/30 rounded-sm overflow-hidden border border-sarmiento-amber/20 shadow-2xl">
        <iframe 
          src="https://maps.google.com/maps?q=Av.+de+Pablo+Gargallo,+41,+50003+Zaragoza&t=&z=17&ie=UTF8&iwloc=&output=embed" 
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          class="grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-700"
        ></iframe>
      </div>

    </div>
  </div>
</section>
